<div class="ui vertical stripe segment">
    <h1 class="ui red center aligned header">Edit</h1>
    <h2 class="ui center aligned header">Edit Scheduled Emails</h2>
    <form class="ui large form" action="/edit/{{rmail._id}}" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="two fields">
            <div class="required field">
                <label>To</label>
                <input type="email" name="to" placeholder="email" value="{{rmail.to}}">
            </div>
            <div class="field">
                <label>CC</label>
                <input type="email" name="cc" placeholder="email" value="{{rmail.cc}}">
            </div>
        </div>
        <div class="two fields">
            <div class="required field">
                <label>Schedule Type</label>
                <div class="ui selection dropdown">
                    <input type="hidden" name="scheduler" autocomplete="off" value="{{rmail.scheduler}}">
                    <i class="dropdown icon"></i>
                    <div class="default text">Schedule Type</div>
                    <div class="menu">
                        <div class="item" data-value="recurring">Recurring</div>
                        <div class="item" data-value="weekly">Weekly</div>
                        <div class="item" data-value="monthly">Monthly</div>
                        <div class="item" data-value="yearly">Yearly</div>
                    </div>
                </div>
            </div>
            <div class="required field">
                <label>Date</label>
                <div class="ui calendar">
                    <div class="ui input left icon">
                        <i class="calendar icon"></i>
                        <input type="datetime" placeholder="Pick up a date" name="date" autocomplete="off" value="{{rmail.schedulerDateTime}}">
                    </div>        
                </div>
            </div>
        </div>
        <div class="required field">
            <label>Subject</label>
            <input type="text" name="subject" maxlength="15" placeholder="Your subject" autocomplete="off" value="{{rmail.subject}}">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="body" placeholder="Type your message here..." cols="30" rows="3" autocomplete="off">{{rmail.body}}</textarea>
        </div>
        <button class="ui primary button" type="submit">Reschedule & Send</button>
        <a class="ui secondary button" type="cancel" href="/home">Cancel</a>        
    </form>
    <br>
    <form action="/delete/{{rmail._id}}" method="POST" id="delete-form">
        <input type="hidden" name="_method" value="DELETE">
        <button class="ui negative button" type="submit">Delete Scheduled</button>
    </form>
</div>
