<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui red image header">
      <img src="assets/images/logo.png" class="image">
      <div class="content">
        Login to R-mail
      </div>
    </h2>
    <form class="ui large form warning" method="POST" action="/auth/login">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="email" placeholder="E-mail address">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="password" placeholder="Password">
          </div>
        </div>
        <button class="ui fluid large red submit button" type="submit">Login</button>
      </div>
      <div class="ui error message">
        <div class="header"></div>
        <p></p>
      </div>
      {{#if error_text}}
      <div class="ui warning message">
        <div class="header">{{error_header}}</div>
        <p>{{error_text}}</p>
      </div>
      {{/if}}
      <br>
    </form>

    <div class="ui fluid vertical buttons">
        <a class="ui blue large button" href="/auth/google">
            <i class="google icon"></i>
            Login with Google
        </a>
    </div>    

    <div class="ui message">
      New to us?
      <br>
      <a class="ui red basic medium button" href="/register">Sign Up</a>
    </div>
  </div>
</div>